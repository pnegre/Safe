<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SafeTheme" parent="android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- style for the action bar backgrounds -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <!--<item name="android:background">#333333</item>-->
        <item name="android:displayOptions">showHome</item>
    </style>



	<style name="MyFont" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:typeface">sans</item>
		<item name="android:textSize">18sp</item>
	</style>
	
	<style name="MyFont.monospace">
		<item name="android:typeface">monospace</item>
		<item name="android:textColor">#FF5555</item>
		
	</style>
	
	<style name="Separator">
		<item name="android:background">#CCCCCC</item> 
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">2dip</item>
		<item name="android:layout_marginBottom">15dip</item>
		<item name="android:layout_marginTop">15dip</item>
		<item name="android:layout_alignParentTop">true</item>
	</style>
	
	<style name="HeaderButtonStyle">
		<item name="android:layout_marginTop">15dip</item>
		<item name="android:layout_marginLeft">20dip</item>
		<item name="android:layout_marginRight">20dip</item>
	</style>
	
</resources>
